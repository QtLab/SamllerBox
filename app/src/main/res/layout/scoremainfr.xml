                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:layout_alignBaseline="@+id/solo_eatchicken"
                    android:layout_alignBottom="@+id/solo_eatchicken"
                    android:layout_alignStart="@+id/solo_playtimes" />

                <TextView
