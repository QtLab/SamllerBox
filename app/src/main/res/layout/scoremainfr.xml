                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/solo_killpeopletimes"
                    android:layout_alignBottom="@+id/solo_killpeopletimes"
                    android:layout_alignStart="@+id/solo_eatchicken"
                    android:text="游戏次数"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/solo_playtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/solo_play"
                    android:layout_alignBottom="@+id/solo_play"
                    android:layout_alignStart="@+id/solo_averagekilltimes"
                    android:text="TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/solo_averagekill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每场平均伤害"
                    android:textColor="#000000"
                    android:layout_alignBaseline="@+id/solo_top10precent"
                    android:layout_alignBottom="@+id/solo_top10precent"
                    android:layout_alignStart="@+id/solo_play" />

                <TextView
                    android:id="@+id/solo_averagekilltimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/solo_averagekill"
                    android:layout_alignBottom="@+id/solo_averagekill"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp"
                    android:text="TextView"
                    android:textColor="#000000" />

            </RelativeLayout>
